---
interface Props {
  title: string;
  href: string;
  date?: Date;
  description?: string;
  tags?: string[];
}

const { title, href, date, description, tags } = Astro.props;
const formattedDate = date?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="group p-6 rounded-lg border border-slate-200 dark:border-border-dark hover:border-primary dark:hover:border-primary bg-white dark:bg-surface-dark transition-all hover:shadow-md">
  <a href={href} class="block">
    <h3 class="text-xl font-semibold text-slate-900 dark:text-white group-hover:text-primary transition-colors mb-2">
      {title}
    </h3>
    {date && (
      <div class="text-sm text-slate-500 dark:text-slate-400 mb-3">
        <time datetime={date.toISOString()}>{formattedDate}</time>
      </div>
    )}
    {description && (
      <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-4">
        {description}
      </p>
    )}
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map(tag => (
          <span class="inline-flex items-center px-2.5 py-0.5 rounded text-xs font-medium bg-primary/10 text-primary dark:text-primary">
            {tag}
          </span>
        ))}
      </div>
    )}
  </a>
</article>

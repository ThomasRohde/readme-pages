---
// Header component
const { title = "Thomas Rohde" } = Astro.props;
---

<header class="border-b border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4 py-4">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
      <a href={import.meta.env.BASE_URL} class="hover:text-blue-600 dark:hover:text-blue-400">
        {title}
      </a>
    </h1>
  </div>
</header>

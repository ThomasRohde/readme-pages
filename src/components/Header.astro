---
import ThemeToggle from './ThemeToggle.astro';
import MobileMenuButton from './MobileMenuButton.astro';

const baseUrl = import.meta.env.BASE_URL;
const { title = "Thomas Rohde" } = Astro.props;
---

<header class="sticky top-0 z-50 w-full border-b border-slate-200 dark:border-border-dark bg-background-light/80 dark:bg-background-dark/80 backdrop-blur-md">
  <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <div class="flex items-center gap-2">
      <MobileMenuButton />
      <!-- Logo -->
      <a class="flex items-center gap-3 text-slate-900 dark:text-white" href={baseUrl}>
        <div class="size-8 rounded-lg bg-primary flex items-center justify-center text-white">
          <span class="material-symbols-outlined text-[20px]">library_books</span>
        </div>
        <span class="text-lg font-bold tracking-tight">{title}</span>
      </a>
    </div>
    <div class="flex items-center gap-2">
      <ThemeToggle />
    </div>
  </div>
</header>

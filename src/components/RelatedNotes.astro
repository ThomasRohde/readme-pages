---
import type { CollectionEntry } from 'astro:content';
import Card from './Card.astro';

interface Props {
  notes: CollectionEntry<'notes'>[];
  baseUrl: string;
}

const { notes, baseUrl } = Astro.props;
---

{notes.length > 0 && (
  <aside class="mt-16 pt-8 border-t border-slate-200 dark:border-slate-700">
    <h2 class="text-2xl font-bold tracking-tight text-slate-900 dark:text-white mb-6">
      Related Notes
    </h2>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {notes.map(note => (
        <Card
          title={note.data.title}
          href={`${baseUrl}/notes/${note.id}/`}
          date={note.data.date}
          description={note.data.description}
          tags={note.data.tags}
        />
      ))}
    </div>
  </aside>
)}

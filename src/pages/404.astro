---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL || '/';
const baseWithSlash = base.endsWith('/') ? base : `${base}/`;

// Get some recent notes to show
const allNotes = await getCollection('notes', ({ data }) => !data.draft);
const recentNotes = allNotes
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

// Get all pages
const allPages = await getCollection('pages');
---

<BaseLayout
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist. Explore our content or navigate back home."
>
  <div class="max-w-3xl mx-auto text-center py-16">
    <!-- Large 404 with decorative corners -->
    <div class="relative mb-12 inline-block animate-fade-up" style="opacity: 0;">
      <div class="absolute -top-4 -left-4 w-8 h-8 border-l-2 border-t-2 border-accent/40 dark:border-gold/40"></div>
      <div class="absolute -bottom-4 -right-4 w-8 h-8 border-r-2 border-b-2 border-accent/40 dark:border-gold/40"></div>
      <span class="font-display text-[10rem] leading-none font-bold text-primary-200 dark:text-navy-800">404</span>
    </div>

    <!-- Error message -->
    <h1 class="font-display text-4xl sm:text-5xl font-bold mb-4 text-primary-800 dark:text-cream-100 animate-fade-up" style="animation-delay: 0.1s; opacity: 0;">
      Page Not Found
    </h1>
    <p class="text-xl text-ink-light dark:text-cream-300 mb-12 animate-fade-up" style="animation-delay: 0.15s; opacity: 0;">
      The page you're looking for doesn't exist or has been moved.
    </p>

    <!-- Quick navigation -->
    <div class="flex flex-wrap justify-center gap-4 mb-16 animate-fade-up" style="animation-delay: 0.2s; opacity: 0;">
      <a
        href={baseWithSlash}
        class="group inline-flex items-center gap-2 px-6 py-3 bg-primary-800 dark:bg-gold text-white dark:text-navy rounded-lg hover:bg-primary-700 dark:hover:bg-gold-400 transition-all duration-200 font-medium shadow-card hover:shadow-card-hover"
      >
        <span class="material-symbols-outlined text-[20px]">home</span>
        Go Home
      </a>
      <a
        href={`${baseWithSlash}notes/`}
        class="group inline-flex items-center gap-2 px-6 py-3 bg-cream-200 dark:bg-surface-dark text-primary-800 dark:text-cream-100 rounded-lg hover:bg-cream-300 dark:hover:bg-navy-800 transition-all duration-200 font-medium border border-cream-300 dark:border-border-dark"
      >
        <span class="material-symbols-outlined text-[20px]">article</span>
        Browse Notes
      </a>
    </div>

    <!-- Recent content -->
    <div class="text-left space-y-10">
      {recentNotes.length > 0 && (
        <section class="animate-fade-up" style="animation-delay: 0.25s; opacity: 0;">
          <div class="flex items-center gap-4 mb-6">
            <h2 class="font-display text-2xl font-semibold text-primary-800 dark:text-cream-100">
              Recent Notes
            </h2>
            <div class="flex-1 h-px bg-cream-300 dark:bg-border-dark"></div>
          </div>
          <div class="space-y-3">
            {recentNotes.map((note) => {
              const noteDate = note.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
              });
              return (
                <a
                  href={`${baseWithSlash}notes/${note.id.replace(/\.(md|mdx)$/, '')}/`}
                  class="group relative block p-5 bg-white dark:bg-surface-dark border border-cream-300 dark:border-border-dark rounded-xl hover:border-accent dark:hover:border-gold transition-all duration-300 shadow-card hover:shadow-card-hover dark:shadow-card-dark"
                >
                  <div class="absolute top-3 right-3 w-3 h-3 border-r-2 border-t-2 border-accent/20 dark:border-gold/20 group-hover:border-accent dark:group-hover:border-gold transition-colors"></div>
                  <div class="flex items-start justify-between gap-4">
                    <div>
                      <h3 class="font-display font-semibold text-primary-800 dark:text-cream-100 group-hover:text-accent dark:group-hover:text-gold transition-colors mb-1">
                        {note.data.title}
                      </h3>
                      {note.data.description && (
                        <p class="text-sm text-ink-light dark:text-cream-300 line-clamp-1">
                          {note.data.description}
                        </p>
                      )}
                    </div>
                    <time
                      class="text-xs tracking-wider uppercase text-ink-muted dark:text-cream-400 whitespace-nowrap"
                      datetime={note.data.date.toISOString()}
                    >
                      {noteDate}
                    </time>
                  </div>
                </a>
              );
            })}
          </div>
        </section>
      )}

      {allPages.length > 0 && (
        <section class="animate-fade-up" style="animation-delay: 0.3s; opacity: 0;">
          <div class="flex items-center gap-4 mb-6">
            <h2 class="font-display text-2xl font-semibold text-primary-800 dark:text-cream-100">
              Main Pages
            </h2>
            <div class="flex-1 h-px bg-cream-300 dark:bg-border-dark"></div>
          </div>
          <div class="grid gap-3 sm:grid-cols-2">
            {allPages.map(page => (
              <a
                href={`${baseWithSlash}${page.id}/`}
                class="group relative block p-5 bg-white dark:bg-surface-dark border border-cream-300 dark:border-border-dark rounded-xl hover:border-accent dark:hover:border-gold transition-all duration-300 shadow-card hover:shadow-card-hover dark:shadow-card-dark"
              >
                <div class="absolute top-3 right-3 w-3 h-3 border-r-2 border-t-2 border-accent/20 dark:border-gold/20 group-hover:border-accent dark:group-hover:border-gold transition-colors"></div>
                <h3 class="font-display font-semibold text-primary-800 dark:text-cream-100 group-hover:text-accent dark:group-hover:text-gold transition-colors mb-1">
                  {page.data.title}
                </h3>
                {page.data.description && (
                  <p class="text-sm text-ink-light dark:text-cream-300">
                    {page.data.description}
                  </p>
                )}
              </a>
            ))}
          </div>
        </section>
      )}
    </div>

    <!-- Helpful tip -->
    <div class="mt-12 p-6 bg-primary-50 dark:bg-primary-950/20 border border-primary-200 dark:border-primary-800 rounded-xl animate-fade-up" style="animation-delay: 0.35s; opacity: 0;">
      <div class="flex items-start gap-4">
        <div class="w-10 h-10 rounded-lg bg-primary-100 dark:bg-primary-900 flex items-center justify-center shrink-0">
          <span class="material-symbols-outlined text-primary-600 dark:text-primary-400 text-[20px]">
            info
          </span>
        </div>
        <div class="text-left">
          <p class="font-medium text-primary-800 dark:text-primary-200 mb-1">
            Looking for something specific?
          </p>
          <p class="text-sm text-primary-700 dark:text-primary-300">
            Try using the navigation menu on the left, or browse through our notes and pages above.
          </p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL || '/';
const baseWithSlash = base.endsWith('/') ? base : `${base}/`;

// Get some recent notes to show
const allNotes = await getCollection('notes', ({ data }) => !data.draft);
const recentNotes = allNotes
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

// Get all pages
const allPages = await getCollection('pages');
---

<BaseLayout 
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist. Explore our content or navigate back home."
>
  <div class="max-w-3xl mx-auto text-center py-16">
    <!-- Large 404 -->
    <div class="mb-8">
      <span class="text-9xl font-bold text-primary dark:text-primary">404</span>
    </div>
    
    <!-- Error message -->
    <h1 class="text-4xl font-bold mb-4 text-slate-900 dark:text-slate-100">
      Page Not Found
    </h1>
    <p class="text-xl text-slate-600 dark:text-slate-400 mb-12">
      The page you're looking for doesn't exist or has been moved.
    </p>
    
    <!-- Quick navigation -->
    <div class="flex flex-wrap justify-center gap-4 mb-16">
      <a 
        href={baseWithSlash}
        class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-lg hover:bg-blue-600 transition-colors font-medium"
      >
        <span class="material-symbols-outlined text-[20px]">home</span>
        Go Home
      </a>
      <a 
        href={`${baseWithSlash}notes/`}
        class="inline-flex items-center gap-2 px-6 py-3 bg-slate-200 dark:bg-slate-700 text-slate-900 dark:text-slate-100 rounded-lg hover:bg-slate-300 dark:hover:bg-slate-600 transition-colors font-medium"
      >
        <span class="material-symbols-outlined text-[20px]">article</span>
        Browse Notes
      </a>
    </div>
    
    <!-- Recent content -->
    <div class="text-left space-y-8">
      {recentNotes.length > 0 && (
        <section>
          <h2 class="text-2xl font-bold mb-4 text-slate-900 dark:text-slate-100">
            Recent Notes
          </h2>
          <div class="space-y-3">
            {recentNotes.map(note => {
              const noteDate = note.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
              });
              return (
                <a 
                  href={`${baseWithSlash}notes/${note.slug}/`}
                  class="block p-4 bg-white dark:bg-surface-dark border border-slate-200 dark:border-border-dark rounded-lg hover:border-primary dark:hover:border-primary transition-all hover:shadow-md"
                >
                  <div class="flex items-start justify-between gap-4">
                    <div>
                      <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-1">
                        {note.data.title}
                      </h3>
                      {note.data.description && (
                        <p class="text-sm text-slate-600 dark:text-slate-400">
                          {note.data.description}
                        </p>
                      )}
                    </div>
                    <time 
                      class="text-xs text-slate-500 dark:text-slate-500 whitespace-nowrap"
                      datetime={note.data.date.toISOString()}
                    >
                      {noteDate}
                    </time>
                  </div>
                </a>
              );
            })}
          </div>
        </section>
      )}
      
      {allPages.length > 0 && (
        <section>
          <h2 class="text-2xl font-bold mb-4 text-slate-900 dark:text-slate-100">
            Main Pages
          </h2>
          <div class="grid gap-3 sm:grid-cols-2">
            {allPages.map(page => (
              <a 
                href={`${baseWithSlash}${page.slug}/`}
                class="block p-4 bg-white dark:bg-surface-dark border border-slate-200 dark:border-border-dark rounded-lg hover:border-primary dark:hover:border-primary transition-all hover:shadow-md"
              >
                <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-1">
                  {page.data.title}
                </h3>
                {page.data.description && (
                  <p class="text-sm text-slate-600 dark:text-slate-400">
                    {page.data.description}
                  </p>
                )}
              </a>
            ))}
          </div>
        </section>
      )}
    </div>
    
    <!-- Helpful tip -->
    <div class="mt-12 p-6 bg-blue-50 dark:bg-blue-950/20 border border-blue-200 dark:border-blue-800 rounded-lg">
      <div class="flex items-start gap-3">
        <span class="material-symbols-outlined text-blue-600 dark:text-blue-400 text-[24px] mt-0.5">
          info
        </span>
        <div class="text-left">
          <p class="font-medium text-blue-900 dark:text-blue-200 mb-1">
            Looking for something specific?
          </p>
          <p class="text-sm text-blue-800 dark:text-blue-300">
            Try using the navigation menu on the left, or browse through our notes and pages above.
          </p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
